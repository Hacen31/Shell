#!/usr/bin/env bash
#processdix
#0
while : "/var/run/myscript.pid"
do
    echo "I am alive!"        
    echo "To infinity and beyond"
    echo "I hate the kill command"
    echo "I am invincible!!!"
    echo "Y U no love me?!"
    kill : "/var/run/myscript.pid"
          trap '/tmp/$pid/var/run/myscript.pid; exit SIGTERM'

done

